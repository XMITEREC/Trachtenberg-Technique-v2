<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base app theme -->
    <style name="Theme.TTV2" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowSplashScreenBackground">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Variant used by launcher (Android 12 splash) -->
    <style name="Theme.TTV2.Launcher" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="android:windowSplashScreenBackground">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.TTV2</item>
    </style>

    <!-- No-action-bar version (used if you keep activity_splash.xml) -->
    <style name="Theme.TTV2.NoActionBar" parent="Theme.TTV2">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
